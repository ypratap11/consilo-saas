# FlowIQ Environment Variables
# Copy this to .env and fill in your values

# ============================================================================
# DATABASE
# ============================================================================
# Local development
DATABASE_URL=postgresql://flowiq:flowiq@localhost:5432/flowiq

# Production (DigitalOcean Managed Database)
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# ============================================================================
# SECURITY
# ============================================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-here

# ============================================================================
# CORS (Frontend URLs)
# ============================================================================
# Development
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Production
# CORS_ORIGINS=https://app.flowiq.ai,https://flowiq.ai

# ============================================================================
# WEEK 2 - CLERK.DEV (Auth)
# ============================================================================
# CLERK_SECRET_KEY=sk_live_...
# CLERK_PUBLISHABLE_KEY=pk_live_...

# ============================================================================
# WEEK 2 - STRIPE (Billing)
# ============================================================================
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_PUBLISHABLE_KEY=pk_live_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
